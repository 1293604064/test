@import "./styles/iconfont.wxss";
/*初始化，为页面进行初始化*/
page,view,text,swiper,swiper-item,image,navigator{
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}
/*主题颜色，通过变量来实现
less中存在变量这个知识，
原生的css和wxss中也支持变量
*/
page{
  --themeColor:#eb4450;
  /*
  定义统一的字体大小，假设设计稿的字体是375px
  1px=2rpx
  14px=28rpx
  */
  font-size: 28rpx;
}